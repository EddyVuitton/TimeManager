<div class="d-flex flex-column gap-y-4" style="min-width: 150px;">
    <MudStack>
        <div @onclick="(async () => await RemoveTask())" class="option" style="padding: 0px 10px;">
            <div class="icon-contener" style="margin-right: 10px;">
                <MudIcon Icon="@Icons.Material.Filled.Delete"></MudIcon>
            </div>
            <div>
                Usuń
            </div>
        </div>
        <MudDivider />
        @foreach (var list in TasksRef.GetActivityLists())
        {
            <div @onclick="(async () => await MoveTaskToList(list.ID))" class="option" style="padding: 0px 10px;">
                <div class="icon-contener" style="margin-right: 10px;">
                    @if (TaskDto.ActivityListId == list.ID)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Done"></MudIcon>
                    }
                </div>
                <div>
                    @list.Name
                </div>
            </div>
        }
        <div @onclick="OpenAddListDialog" class="option" style="padding: 0px 10px;">
            <div class="icon-contener" style="margin-right: 10px;">
                <MudIcon Icon="@Icons.Material.Filled.PlaylistAdd"></MudIcon>
            </div>
            <div>
                Nowa lista
            </div>
        </div>
    </MudStack>
</div>